{% for document in document %}
    <a href="{{ url('page_show', { slug: document.slug }, true) }}" title="{% trans width {'%name': document.name } from "views" %}page.www.recentPages.content.a.title{% endtrans %}">
        {{ document.name }}
    </a>
{% else %}
    {% trans from "views" %}page.recentPages.error.text{% endtrans %}
{% endfor %}