{% extends 'BlackroomCMSBundle::base.html.twig' %}

{% block body %}

    {% include 'BlackroomCMSBundle:CMS:header.html.twig' %}

    <div class="container">

        {% for document in documents %}
            <section class="article article-{{ document.slug }} article-{{ document.id }} row">
                {% if document.primaryImageOfPage %}
                <div class="span2">
                    <img class="img-circle" alt="140x140" style="width: 140px; height: 140px;" src="/uploads/page/{{ document.primaryImageOfPage }}">
                </div>
                {% endif %}

                <h1 class="">{{ document.name }}</h1>
                <div class="content ">
                    {% if document.description %}
                        {{ document.description }}
                    {% else %}
                        {% autoescape false %}
                        {{ document.text|striptags|truncate(240, false, '') }}
                        {% endautoescape %}
                    {% endif %}
                </div>
                <div class="read span12">
                    <a href="{{ url('page_show', { slug: document.slug }, true) }}" title="{% trans with {'%name%': document.name }%}page.link.title{% endtrans %}">
                        {% trans %}page.link.read{% endtrans %}
                    </a>
                </div>

            </section>
            <hr>
        {% endfor %}

    </div>
{% endblock body %}