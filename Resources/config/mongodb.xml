<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="blackroom_page.manager.page">Blackroom\Bundle\PageBundle\Document\PageManager</parameter>
    </parameters>

    <services>
        <service id="blackroom_page.document.manager" alias="doctrine.odm.mongodb.document_manager" />

        <service id="blackroom_page.manager.page" class="%blackroom_page.manager.page%">
            <argument type="service" id="blackroom_page.document.manager" />
            <argument>%blackroom_page.page.model.class%</argument>
        </service>
    </services>
</container>
