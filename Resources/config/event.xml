<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="black_page.infrastructure.domain_event.event.created.class">Black\Bundle\PageBundle\Infrastructure\DomainEvent\WebPageCreatedEvent</parameter>
        <parameter key="black_page.infrastructure.domain_event.subscriber.created.class">Black\Bundle\PageBundle\Infrastructure\DomainEvent\WebPageCreatedSubscriber</parameter>

        <parameter key="black_page.infrastructure.domain_event.event.writed.class">Black\Bundle\PageBundle\Infrastructure\DomainEvent\WebPageWritedEvent</parameter>
        <parameter key="black_page.infrastructure.domain_event.subscriber.writed.class">Black\Bundle\PageBundle\Infrastructure\DomainEvent\WebPageWritedSubscriber</parameter>

        <parameter key="black_page.infrastructure.domain_event.event.published.class">Black\Bundle\PageBundle\Infrastructure\DomainEvent\WebPagePublishedEvent</parameter>
        <parameter key="black_page.infrastructure.domain_event.subscriber.published.class">Black\Bundle\PageBundle\Infrastructure\DomainEvent\WebPagePublishedSubscriber</parameter>

    </parameters>

    <services>

        <!-- Events -->
        <service id="black_page.infrastructure.domain_event.event.created"
                 class="%black_page.infrastructure.domain_event.event.created.class%" />

        <service id="black_page.infrastructure.domain_event.event.writed"
                 class="%black_page.infrastructure.domain_event.event.writed.class%" />

        <service id="black_page.infrastructure.domain_event.event.published"
                 class="%black_page.infrastructure.domain_event.event.published.class%" />

        <!-- Subscribers -->
        <service id="black_page.infrastructure.domain_event.subscriber.created"
                 class="%black_page.infrastructure.domain_event.subscriber.created.class%">
            <argument type="service" id="logger" />
        </service>

        <service id="black_page.infrastructure.domain_event.subscriber.writed"
                 class="%black_page.infrastructure.domain_event.subscriber.writed.class%">
            <argument type="service" id="logger" />
        </service>

        <service id="black_page.infrastructure.domain_event.subscriber.published"
                 class="%black_page.infrastructure.domain_event.subscriber.published.class%">
            <argument type="service" id="logger" />
        </service>

    </services>
</container>
