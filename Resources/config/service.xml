<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="black_page.application.service.read.class">Black\Bundle\PageBundle\Application\Service\WebPageReadService</parameter>
        <parameter key="black_page.infrastructure.service.read.class">Black\Bundle\PageBundle\Infrastructure\Service\WebPageReadService</parameter>
        <parameter key="black_page.infrastructure.service.write.class">Black\Bundle\PageBundle\Infrastructure\Service\WebPageWriteService</parameter>
    </parameters>

    <services>

        <service id="black_page.application.service.read" class="%black_page.application.service.read.class%">
            <argument type="service" id="black_page.infrastructure.manager.webpage" />
            <argument type="service" id="black_page.application.speficication.page_published" />
            <argument type="service" id="black_page.infrastructure.service.read" />
        </service>

        <service id="black_page.infrastructure.service.read" class="%black_page.infrastructure.service.read.class%">
            <argument type="service" id="black_page.infrastructure.manager.webpage" />
            <argument type="service" id="black_page.application.speficication.page_published" />
        </service>

        <service id="black_page.infrastructure.service.write" class="%black_page.infrastructure.service.write.class%">
            <argument type="service" id="black_page.infrastructure.manager.webpage" />
        </service>

    </services>
</container>
