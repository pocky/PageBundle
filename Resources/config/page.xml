<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="black_page.page.form" factory-method="createNamed" factory-service="form.factory" class="Symfony\Component\Form\Form">
            <argument>%black_page.page.form.name%</argument>
            <argument type="service" id="black_page.page.form.type" />
            <argument>null</argument>
        </service>

        <service id="black_page.page.form.type" class="%black_page.page.form.type%">
            <argument>%black_page.page.model.class%</argument>
            <argument type="service" id="black_admin.form.event.button" />
            <tag name="form.type" alias="black_page_page" />
        </service>

        <service id="black_page.page.form.handler" class="%black_page.page.form.handler%" scope="request" public="true">
            <argument type="service" id="black_page.page.form" />
            <argument type="service" id="black_page.manager.page" />
            <argument type="service" id="request" />
            <argument type="service" id="router" />
            <argument type="service" id="session" />
        </service>

        <service id="black_page.page.form.enabled_list" class="%black_page.page.form.enabled_list%" public="false">
            <argument type="service" id="black_config.manager.config" />
        </service>
        
        <service id="black_page.page.form.enabled_type" class="Black\Bundle\CommonBundle\Form\Type\CustomChoiceListType" public="true">
            <argument type="service" id="black_page.page.form.enabled_list" />
            <argument>black_page_choice_list_enabled</argument>
            <tag name="form.type" alias="black_page_choice_list_enabled" />
        </service>

        <service id="black_page.page.form.page_list" class="%black_page.page.form.page_list%" public="false">
            <argument type="service" id="black_page.manager.page" />
        </service>

        <service id="black_page.page.form.page_type" class="Black\Bundle\CommonBundle\Form\Type\CustomChoiceListType" public="true">
            <argument type="service" id="black_page.page.form.page_list" />
            <argument>black_page_choice_list_page</argument>
            <tag name="form.type" alias="black_page_choice_list_page" />
        </service>

        <service id="black_page.page.form.page_id_list" class="%black_page.page.form.page_id_list%" public="false">
            <argument type="service" id="black_page.manager.page" />
        </service>
        
        <service id="black_page.page.form.page_id_type" class="Black\Bundle\CommonBundle\Form\Type\CustomChoiceListType" public="true">
            <argument type="service" id="black_page.page.form.page_id_list" />
            <argument>black_page_choice_list_page_id</argument>
            <tag name="form.type" alias="black_page_choice_list_page_id" />
        </service>

        <service id="black_page.page.form.status_list" class="%black_page.page.form.status_list%" public="false"/>
        
        <service id="black_page.page.form.status_type" class="Black\Bundle\CommonBundle\Form\Type\CustomChoiceListType" public="true">
            <argument type="service" id="black_page.page.form.status_list" />
            <argument>black_page_choice_list_status</argument>
            <tag name="form.type" alias="black_page_choice_list_status" />
        </service>

    </services>
</container>
