<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="black_page.application.dto.webpage.class">%black_page.webpage.dto.class%</parameter>
        <parameter key="black_page.application.dto.create_webpage.class">%black_page.webpage.create_dto.class%</parameter>
        <parameter key="black_page.application.dto.write_webpage.class">%black_page.webpage.write_dto.class%</parameter>
        <parameter key="black_page.application.dto.web_page_transformer.class">Black\Component\Page\Application\DTO\WebPageTransformer</parameter>
        <parameter key="black_page.application.dto.create_web_page_transformer.class">Black\Component\Page\Application\DTO\CreateWebPageTransformer</parameter>
        <parameter key="black_page.application.dto.write_web_page_transformer.class">Black\Component\Page\Application\DTO\WriteWebPageTransformer</parameter>
    </parameters>

    <services>
        <service id="black_page.application.dto.webpage" class="%black_page.application.dto.webpage.class%" />
        <service id="black_page.application.dto.create_webpage" class="%black_page.application.dto.create_webpage.class%" />
        <service id="black_page.application.dto.write_webpage" class="%black_page.application.dto.write_webpage.class%" />

        <service id="black_page.application.dto.web_page_transformer" class="%black_page.application.dto.web_page_transformer.class%">
            <argument>%black_page.webpage.model.class%</argument>
            <argument>%black_page.webpage.dto.class%</argument>
        </service>

        <service id="black_page.application.dto.create_web_page_transformer" class="%black_page.application.dto.create_web_page_transformer.class%">
            <argument>%black_page.webpage.model.class%</argument>
            <argument>%black_page.webpage.create_dto.class%</argument>
        </service>

        <service id="black_page.application.dto.write_web_page_transformer" class="%black_page.application.dto.write_web_page_transformer.class%">
            <argument>%black_page.webpage.model.class%</argument>
            <argument>%black_page.webpage.write_dto.class%</argument>
        </service>

    </services>
</container>
