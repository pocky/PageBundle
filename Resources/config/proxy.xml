<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="black_page.proxy.class">Black\Bundle\PageBundle\Proxy\PageProxy</parameter>
    </parameters>

    <services>

        <service id="black_page.proxy" class="%black_page.proxy.class%" public="true" scope="request">
            <argument type="service" id="black_page.manager.page" />
            <argument type="service" id="black_seo.seo" />
            <argument type="service" id="security.context" />
            <argument type="service" id="request" />
            <argument type="service" id="kernel" />
        </service>

    </services>
</container>
