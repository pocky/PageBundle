<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="black_page.page.controller.class">Black\Bundle\PageBundle\Controller\PageController</parameter>
    </parameters>

    <services>
        <service id="black_page.controller.page" class="%black_page.page.controller.class%" scope="request">
            <argument type="service" id="black_page.manager.page" />
            <argument type="service" id="black_page.proxy" />
        </service>
    </services>
</container>
