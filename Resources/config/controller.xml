<?xml version="1.0" encoding="UTF-8" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="black_page.exception.class">Black\Bundle\PageBundle\Exception\PageNotFoundException</parameter>
    </parameters>

    <services>
        <service id="black_page.exception.page" class="%black_page.exception.class%" />

        <service id="black_page.controller.page" class="%black_page.controller.class.page%" scope="request">
            <argument type="service" id="black_page.configuration.page" />
            <argument type="service" id="black_page.page.form.handler" />
            <argument type="service" id="black_page.proxy" />
        </service>
    </services>
</container>
