<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="black_page.application.controller.create_page.class">%black_page.application.controller.class.create_page%</parameter>
        <parameter key="black_page.application.controller.write_page.class">%black_page.application.controller.class.write_page%</parameter>
        <parameter key="black_page.application.controller.read_page.class">%black_page.application.controller.class.read_page%</parameter>
        <parameter key="black_page.application.controller.publish_page.class">%black_page.application.controller.class.publish_page%</parameter>
        <parameter key="black_page.application.controller.remove_page.class">%black_page.application.controller.class.remove_page%</parameter>
    </parameters>

    <services>

        <!-- Write controllers -->
        <service id="black_page.application.controller.create_page" class="%black_page.application.controller.create_page.class%">
            <argument type="service" id="black_common.infrastructure.command.bus" />
            <argument type="service" id="black_page.infrastructure.cqrs.handler.create_web_page" />
            <argument>Black\Bundle\PageBundle\Infrastructure\CQRS\Command\CreateWebPageCommand</argument>
        </service>

        <service id="black_page.application.controller.write_page" class="%black_page.application.controller.write_page.class%">
            <argument type="service" id="black_common.infrastructure.command.bus" />
            <argument type="service" id="black_page.infrastructure.cqrs.handler.write_web_page" />
            <argument>Black\Bundle\PageBundle\Infrastructure\CQRS\Command\WriteWebPageCommand</argument>
        </service>

        <service id="black_page.application.controller.publish_page" class="%black_page.application.controller.publish_page.class%">
            <argument type="service" id="black_common.infrastructure.command.bus" />
            <argument type="service" id="black_page.infrastructure.cqrs.handler.publish_web_page" />
            <argument>Black\Bundle\PageBundle\Infrastructure\CQRS\Command\PublishWebPageCommand</argument>
        </service>

        <service id="black_page.application.controller.remove_page" class="%black_page.application.controller.remove_page.class%">
            <argument type="service" id="black_common.infrastructure.command.bus" />
            <argument type="service" id="black_page.infrastructure.cqrs.handler.remove_web_page" />
            <argument>Black\Bundle\PageBundle\Infrastructure\CQRS\Command\RemoveWebPageCommand</argument>
        </service>

        <!-- Read Controllers -->
        <service id="black_page.application.controller.read_page" class="%black_page.application.controller.read_page.class%">
            <argument type="service" id="black_page.application.service.read" />
        </service>

    </services>
</container>
