<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="black_page.infrastructure.cqrs.handler.create_web_page.class">Black\Bundle\PageBundle\Infrastructure\CQRS\Handler\CreateWebPageHandler</parameter>
        <parameter key="black_page.infrastructure.cqrs.handler.write_web_page.class">Black\Bundle\PageBundle\Infrastructure\CQRS\Handler\WriteWebPageHandler</parameter>
        <parameter key="black_page.infrastructure.cqrs.handler.publish_web_page.class">Black\Bundle\PageBundle\Infrastructure\CQRS\Handler\PublishWebPageHandler</parameter>
        <parameter key="black_page.infrastructure.cqrs.handler.remove_web_page.class">Black\Bundle\PageBundle\Infrastructure\CQRS\Handler\RemoveWebPageHandler</parameter>
    </parameters>

    <services>

        <service id="black_page.infrastructure.cqrs.handler.create_web_page" class="%black_page.infrastructure.cqrs.handler.create_web_page.class%">
            <argument type="service" id="black_page.infrastructure.service.write" />
            <argument type="service" id="black_page.infrastructure.manager.webpage" />
            <argument type="service" id="event_dispatcher" />
            <argument type="service" id="black_page.infrastructure.domain_event.subscriber.created" />
        </service>

        <service id="black_page.infrastructure.cqrs.handler.write_web_page" class="%black_page.infrastructure.cqrs.handler.write_web_page.class%">
            <argument type="service" id="black_page.infrastructure.service.write" />
            <argument type="service" id="black_page.infrastructure.manager.webpage" />
            <argument type="service" id="event_dispatcher" />
            <argument type="service" id="black_page.infrastructure.domain_event.subscriber.writed" />
        </service>

        <service id="black_page.infrastructure.cqrs.handler.publish_web_page" class="%black_page.infrastructure.cqrs.handler.publish_web_page.class%">
            <argument type="service" id="black_page.infrastructure.service.write" />
            <argument type="service" id="black_page.infrastructure.manager.webpage" />
            <argument type="service" id="event_dispatcher" />
            <argument type="service" id="black_page.infrastructure.domain_event.subscriber.published" />
        </service>

        <service id="black_page.infrastructure.cqrs.handler.remove_web_page" class="%black_page.infrastructure.cqrs.handler.remove_web_page.class%">
            <argument type="service" id="black_page.infrastructure.service.write" />
            <argument type="service" id="black_page.infrastructure.manager.webpage" />
            <argument type="service" id="event_dispatcher" />
            <argument type="service" id="black_page.infrastructure.domain_event.subscriber.removed" />
        </service>
    </services>
</container>
